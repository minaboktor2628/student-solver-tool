// docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  PLA
  TA
  COORDINATOR
  PROFESSOR
}

enum StaffRole {
  PLA
  TA
}

enum TermLetter {
  A
  B
  C
  D
  F
  S
}

model Term {
  letter               TermLetter
  year                 Int
  startDate            DateTime
  endDate              DateTime
  professorFormInputs  ProfessorFormInput[]
  professorPreferences ProfessorPreference[]
  sections             Section[]
  staffFormInputs      StaffFormInput[]
  qualifiedFors        QualifiedFor[]
  preferenceFors       PreferenceFor[]
  assignments          Assignment[]

  @@id([letter, year])
}

model Staff {
  id                   String                @id
  user                 User                  @relation(fields: [id], references: [id])
  email                String?               @unique
  name                 String?
  role                 Role?
  hours                Int
  staffFormInputs      StaffFormInput[]
  assignments          Assignment[]
  professorPreferences ProfessorPreference[]

  qualifiedFors QualifiedFor[]

  preferenceFors PreferenceFor[]
}

model Professor {
  id                  String               @id
  user                User                 @relation(fields: [id], references: [id])
  email               String?              @unique
  name                String?
  professorFormInputs ProfessorFormInput[]
  sections            Section[]

  professorPreferences ProfessorPreference[]
}

model StaffFormInput {
  staffId        String
  staff          Staff           @relation(fields: [staffId], references: [id])
  term           Term            @relation(fields: [termLetter, year], references: [letter, year])
  year           Int
  termLetter     TermLetter
  times          String
  comments       String
  locked         Boolean
  qualifications QualifiedFor[]
  preferences    PreferenceFor[]

  @@id([staffId, termLetter, year])
}

model ProfessorFormInput {
  professorId String
  professor   Professor             @relation(fields: [professorId], references: [id])
  courseCode  String
  section     Section               @relation(fields: [courseCode, termLetter, year], references: [courseCode, termLetter, year])
  term        Term                  @relation(fields: [termLetter, year], references: [letter, year])
  termLetter  TermLetter
  year        Int
  times       String
  comments    String
  preferences ProfessorPreference[]

  @@id([professorId, courseCode, termLetter, year])
  @@unique([professorId, termLetter, year])
}

model ProfessorPreference {
  professorId        String
  professor          Professor          @relation(fields: [professorId], references: [id])
  staffId            String
  staff              Staff              @relation(fields: [staffId], references: [id])
  term               Term               @relation(fields: [termLetter, year], references: [letter, year])
  termLetter         TermLetter
  year               Int
  antiPreference     Boolean
  professorFormInput ProfessorFormInput @relation(fields: [professorId, termLetter, year], references: [professorId, termLetter, year])

  @@id([professorId, staffId, termLetter, year])
}

model Section {
  courseCode          String
  termLetter          TermLetter
  year                Int
  term                Term                 @relation(fields: [termLetter, year], references: [letter, year])
  name                String
  description         String
  professorId         String
  professor           Professor            @relation(fields: [professorId], references: [id])
  enrollment          Int
  capacity            Int
  requiredHours       Int
  assignments         Assignment[]
  professorFormInputs ProfessorFormInput[]
  qualifiedFors       QualifiedFor[]
  preferenceFors      PreferenceFor[]

  @@id([courseCode, termLetter, year])
}

model QualifiedFor {
  staffId    String
  staff      Staff      @relation(fields: [staffId], references: [id])
  termLetter TermLetter
  year       Int
  term       Term       @relation(fields: [termLetter, year], references: [letter, year])
  courseCode String
  section    Section    @relation(fields: [courseCode, termLetter, year], references: [courseCode, termLetter, year])

  form StaffFormInput @relation(fields: [staffId, termLetter, year], references: [staffId, termLetter, year])

  @@id([staffId, termLetter, year, courseCode])
}

model PreferenceFor {
  staffId    String
  staff      Staff          @relation(fields: [staffId], references: [id])
  termLetter TermLetter
  year       Int
  term       Term           @relation(fields: [termLetter, year], references: [letter, year])
  courseCode String
  section    Section        @relation(fields: [courseCode, termLetter, year], references: [courseCode, termLetter, year])
  form       StaffFormInput @relation(fields: [staffId, termLetter, year], references: [staffId, termLetter, year])

  @@id([staffId, termLetter, year, courseCode])
}

model Assignment {
  staffId    String
  termLetter TermLetter
  year       Int
  term       Term       @relation(fields: [termLetter, year], references: [letter, year])
  courseCode String
  staff      Staff      @relation(fields: [staffId], references: [id])
  section    Section    @relation(fields: [courseCode, termLetter, year], references: [courseCode, termLetter, year])

  @@id([staffId, termLetter, year, courseCode])
}

model User {
  id             String     @id @default(cuid())
  name           String?
  email          String?    @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  roles          UserRole[]
  professorEmail String?
  staffEmail     String?

  staff      Staff?
  professor Professor?
}

model UserRole {
  role   Role
  user   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@id([userId, role])
}

model AllowedEmail {
  id    String @id @default(cuid())
  email String
  role  Role

  @@unique([email, role])
  @@index([email])
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
