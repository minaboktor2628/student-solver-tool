// docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  PLA
  TA
  COORDINATOR
  PROFESSOR
}

enum StaffRole {
  PLA
  TA
}

enum TermLetter {
  A
  B
  C
  D
  F
  S
}

model Term {
  letter TermLetter
  year Int
  @@id([letter, year])
}

model Staff {
  email String @id
  name String?
  role Role?
  hours Int
  staffFormInputs StaffFormInput[]
  professorPreferences ProfessorPreference[]
  assignments Assignment[]
}

model Professor {
  email String @id
  name String?
  professorFormInputs ProfessorFormInput[]
  sections Section[]
}

model StaffFormInput {
  email String
  staff Staff @relation(fields: [email], references:[email])
  term TermLetter
  year Int
  times String
  comments String
  locked Boolean
  qualifications QualifiedFor[]
  preferences PreferenceFor[]
  @@id([email, term, year])
}

model ProfessorFormInput {
  email String
  term TermLetter
  year Int
  times String
  comments String
  professor Professor @relation(fields: [email], references:[email])
  preferences ProfessorPreference[]
  @@id([email, term, year])
}

model ProfessorPreference {
  professorEmail String
  staffEmail String
  term TermLetter
  year Int
  antiPreference Boolean
  professorFormInput ProfessorFormInput @relation(fields: [professorEmail, term, year], references: [email, term, year])
  staff Staff @relation(fields: [staffEmail], references: [email])
  @@id([professorEmail, staffEmail, term, year])
}

model Section {
  courseCode String
  term TermLetter
  year Int
  name String
  description String
  professorEmail String
  enrollment Int
  capacity Int
  professor Professor @relation(fields: [professorEmail], references: [email])
  assignments Assignment[]
  @@id([courseCode, term, year])
}

model QualifiedFor {
  email String
  term TermLetter
  year Int
  courseCode String
  form StaffFormInput @relation(fields: [email, term, year], references: [email, term, year])
  @@id([email, term, year, courseCode])
}

model PreferenceFor {
  email String
  term TermLetter
  year Int
  courseCode String
  form StaffFormInput @relation(fields: [email, term, year], references: [email, term, year])
  @@id([email, term, year, courseCode])
}

model Assignment {
  email String
  term TermLetter
  year Int
  courseCode String
  staff Staff @relation(fields: [email], references: [email])
  section Section @relation(fields: [courseCode, term, year], references: [courseCode, term, year])
  @@id([email, term, year, courseCode])
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  roles         UserRole[]
}

model UserRole {
  role   Role
  User   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@id([userId, role])
}

model AllowedEmail {
  id    String @id @default(cuid())
  email String
  role  Role

  @@unique([email, role])
  @@index([email])
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
